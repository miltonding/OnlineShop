<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>miltonshop</display-name>
  <welcome-file-list>
    <welcome-file>/static/welcome.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>400</error-code>
    <location>/static/400.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/static/404.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/static/500.html</location>
  </error-page>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath*:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <display-name>contextLoaderListener</display-name>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <description>mvc.xml</description>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:shop-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <filter>
    <display-name>PageEncodingFilter</display-name>
    <filter-name>PageEncodingFilter</filter-name>
    <filter-class>com.milton.shop.filter.PageEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>PageEncodingFilter</filter-name>
    <url-pattern>/page/*</url-pattern>
  </filter-mapping>

  <filter>
    <display-name>ServiceContextFilter</display-name>
    <filter-name>ServiceContextFilter</filter-name>
    <filter-class>com.milton.shop.filter.ServiceContextFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ServiceContextFilter</filter-name>
    <url-pattern>/page/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <display-name>SessionFilter</display-name>
    <filter-name>SessionFilter</filter-name>
    <filter-class>com.milton.shop.filter.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/page/*</url-pattern>
  </filter-mapping>

</web-app>